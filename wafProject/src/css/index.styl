$psPixels = 1242
rem(val, psPixels = $psPixels)
    unit(round(val / (psPixels / 20 ), 4), 'rem')

#app
   width 20rem
   height 100%

   .top
       height rem(84)
       line-height rem(84)
       text-align center

   .main
       height calc(100vh - 2.7rem)
       background #f00

   .footer
       height rem(84)
       line-height rem(84)
       text-align center


